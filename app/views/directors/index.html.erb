<div class="page-header"><h1>Directors</h1></div>

<p><a href="/directors/new_form" class="btn btn-primary">Add New Director</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>DoB</th>
      <th>Name</th>
      <th>Biography</th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><img src="<%= director.image_url %>" width="80"></td>
        <td><%= director.dob %></td>
        <td><%= director.name %></td>
        <td><%= truncate(director.bio) %></td>
        <td>
          <a href="/directors/<%= director.id %>" class="btn btn-primary">
            <p class="fa fa-search-plus"></p>
          </a>
        </td>
        <td>
          <a href="/directors/<%= director.id %>/edit_form" class="btn btn-warning">
            <p class="fa fa-edit"></p>
          </a>
        </td>
        <td>
          <a href="/delete_director/<%= director.id %>" class="btn btn-danger">
            <p class="fa fa-trash-o"></p>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
