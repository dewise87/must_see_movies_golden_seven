<h1>Edit Movie: <%= @movie.id %></h1>

<form action="/update_movie/<%= @movie.id %>" class="form-horizontal">
  <div class="form-group">
    <label for="title" class="col-md-2 control-label">
      Title
    </label>
    <div class="col-md-10">
      <input type="text" value="<%= @movie.title %>" name="title" class="form-control" placeholder="Title">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-md-2 control-label">
      Year
    </label>
    <div class="col-md-10">
      <input type="text" value="<%= @movie.year %>" name="year" class="form-control" placeholder="Year">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-md-2 control-label">
      Duration
    </label>
    <div class="col-md-10">
      <input type="text" value="<%= @movie.duration %>" name="duration" class="form-control" rows="3" placeholder="Duration">
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-md-2 control-label">
      Description
    </label>
    <div class="col-md-10">
      <input type="text" value="<%= @movie.description %>" name="description" class="form-control" rows="3" placeholder="Description">
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-md-2 control-label">
      Image
    </label>
    <div class="col-md-10">
      <input type="text" value="<%= @movie.image_url %>" name="image_url" class="form-control" placeholder="Image">
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" class="btn btn-primary" value="Update Movie">
    </div>
  </div>
</form>
