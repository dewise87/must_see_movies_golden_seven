<div class="page-header"><h1>Movies</h1></div>

<p><a href="/movies/new_form" class="btn btn-primary">Add New Movie</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><img src="<%= movie.image_url %>" width="80"></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %></td>
        <td><%= truncate(movie.description) %></td>
        <td>
          <a href="/movies/<%= movie.id %>" class="btn btn-primary">
            <p class="fa fa-search-plus"></p>
          </a>
        </td>
        <td>
          <a href="/movies/<%= movie.id %>/edit_form" class="btn btn-warning">
            <p class="fa fa-edit"></p>
          </a>
        </td>
        <td>
          <a href="/delete_movie/<%= movie.id %>" class="btn btn-danger">
            <p class="fa fa-trash-o"></p>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
