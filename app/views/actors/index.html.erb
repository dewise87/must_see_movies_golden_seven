<div class="page-header"><h1>Actors</h1></div>

<p><a href="/actors/new_form" class="btn btn-primary">Add New Actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>DoB</th>
      <th>Name</th>
      <th>Biography</th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" width="80"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="btn btn-primary">
            <p class="fa fa-search-plus"></p>
          </a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-warning">
            <p class="fa fa-edit"></p>
          </a>
        </td>
        <td>
          <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger">
            <p class="fa fa-trash-o"></p>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
